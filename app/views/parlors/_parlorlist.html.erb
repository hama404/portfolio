      <div class="media">
        <div class="media-left">
          <%= image_tag("sample/products/products-02.jpg", :class => "media-object", :alt => "Image") %>
          <span class="maskingImage"><a data-toggle="modal" href=".quick-view" class="btn viewBtn">Quick View</a></span>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><a href="single-product.html">NAME</a></h4>
          <p>123-4556 adress</p>
          <h3>crowded situation</h3>
          <div class="chart-container">
            <canvas id="myChart" height="200" width="500"></canvas>
            <script>draw_graph();</script>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
