<div class="row singleProduct">
  <div class="media">
    <div class="productSlider">
      <div id="carousel" class="carousel slide center-block" data-ride="carousel">
        <div class="carousel-inner">
          <% store.assets.each_with_index do |asset, index| %>
            <div class="item <%= "active" if index == 0 %>" data-thumb="<%= index %>">
              <%= image_tag asset.photo.url %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="clearfix">
        <div id="thumbcarousel" class="carousel slide" data-interval="false">
          <% store.assets.each_with_index do |asset, index| %>
            <div data-target="#carousel" data-slide-to="<%= index %>" class="thumb">
              <%= image_tag asset.photo.url :thumb %>
            </div>
          <% end %>
          <a class="left carousel-control" href="#thumbcarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#thumbcarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="container detail">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h2><%= store.name %></h2>
        <% detail(store).each do |key,value| %>
          <% case value[:tag] %>
          <% when "p" %>
            <p><%= key %> : <%= value[:body].first
             %></p>
          <% when "a" %>
            <p><%= key %> : <%= link_to value[:body].first, value[:body].first %></p>
          <% when "div" %>
            <p><%= key %> :</p>
            <div>
              <% value[:body].each do |p| %>
                <p><%= p %></p>
              <% end %>
            </div>
          <% else %>
            <p><%= key %> :</p>
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-6">
        <h3>crowded situation</h3>
        <div class="chart-container">
          <canvas id="myChart<%= store.id %>" height="200" width="500"></canvas>
          <% @chart_data = data_set(@parlor) %>
          <script>
            var labels = <%= @chart_data[:labels] %>, data = <%= @chart_data[:data].to_json.html_safe %>, id = "myChart<%= store.id %>";
            draw_graph();
          </script>
        </div>
      </div>
    </div>
  </div>
</div>
