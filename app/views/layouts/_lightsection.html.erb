<section class="lightSection clearfix pageHeader">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 page-title">
        <h2><%= title %></h2>
      </div>
      <div class="col-xs-12 col-sm-6 page-nav">
        <ol class="breadcrumb">
          <li>
            <%= link_to 'Home', root_path %>
          </li>
          <li>
            <%= link_to 'Add parlor', "", "data-toggle": "modal", "data-target": "#addparlorModal" %>
          </li>
          <li class="active"><p><%= title %></p></li>
          <% if id %>
            <li class="active"><%= link_to 'edit', edit_parlor_path(id) %></li>
            <li class="active"><%= link_to 'destroy', parlor_path(id), method: :delete, data: { confirm: 'can i delete it?' } %>
</li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</section>
