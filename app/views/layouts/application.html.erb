<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= full_title(page_title: yield(:title)) %></title>
    <%= render 'layouts/head_tag' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="main-wrapper">
      <% if notice %>
        <p class="notice alert-success"><%= notice %></p>
      <% elsif alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <!-- LIGHT SECTION -->
      <%= render 'layouts/lightsection', title: @title if @title %>
      <!-- MAIN CONTENT SECTION -->
      <section class="mainContent clearfix">
        <div class="container">
          <%= yield %>
        </div>
      </section>
    </div>
  </body>
</html>
